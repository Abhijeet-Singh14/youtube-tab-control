{
  "manifest_version": 3,
  "name": "YouTube Tab Control",
  "version": "1.0.0",
  "description": "Pauses a YouTube video when switching tabs and unpauses when switching back.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
